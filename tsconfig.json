{
    "files": ["gulpfile.ts/index.ts",
              "src/emulators.ts",
              "src/example/cli.ts",
              "src/example/basic-node.ts"
            ],
    "compilerOptions": {
        "target": "esnext",
        "outDir": "build",
        "declaration": true,
        "sourceMap": true,
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": false
      }
}
